{
    "manifest_version": 2,
    "name":             "Boo",
    "version":          "0.1",
    "content_scripts":  [{
                            "matches":  [
                                        "https://www.youtube.com/*"
                                        ],
                            "js":       [
                                        "content.js"
                                        ],
                            "run_at":   "document_start"
                        }],
    "browser_action":   {
                            "default_icon": "icon.png"
                        },
    "background":       {
                            "scripts": ["background.js"]
                        },
    "permissions":      [
                            "http://www.google.com/*",
                            "storage",
                            "tabs"
                        ]
}
